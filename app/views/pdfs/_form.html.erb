<%= form_with(model: pdf, local: true) do |form| %>
  <% if pdf.errors.any? %>
    <div id="error_explanation">
      <h2><%= t 'pdfs.form.error', count: pdf.errors.count, error: pluralize(pdf.errors.count, "error") %></h2>

      <ul>
      <% pdf.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :pdf %>
    <%= form.file_field :pdf, accept: 'application/pdf' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
